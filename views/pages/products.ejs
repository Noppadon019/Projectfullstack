<% include ../partials/header %>
<div class="jumbotron"><h2>PRODUCTS</h2>
<table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>title</th>
                <th>Price</th>
                
                <th><a name="" id="" class="btn btn-success" href="/insert" role="button">Add Newproduct</a></td></th>
            </tr>
        </thead>
        <tbody id="myTable">
        
    <% products.forEach(function(product){ %>
    
            <tr>
                <td scope="row"><%= product.id %></td>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td><a  class="btn btn-primary" href="/products/<%= product.id %>" role="button">Edit</a>
                <a name="" id="" class="btn btn-danger" href="/product_delete/<%=product.id %>" onclick="return confirm('Are you sure you want to delete?')" role="button">Delete</a></td>
            </tr>
           
            <tr>
                <td scope="row"></td>
                <td></td>
                <td></td>
            </tr>
            <% }); %>
        </tbody>
    
    </table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
</div>


<% include ../partials/footer %>