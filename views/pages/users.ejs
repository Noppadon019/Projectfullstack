<% include ../partials/header %>
<div class="jumbotron">
<h1><center>USERS</center></h1><br>
<table class="table">
        <thead>
            <tr class="text-white bg-secondary">
                <th>ID</th>
                <th>email</th>
                <th>password</th>
                <th><a name="" user_id="" class="btn btn-success" href="/insert_user" role="button">Add Newuser</a></td></th>
            </tr>
        </thead>
        <tbody id="myTable">
        
    <% users.forEach(function(user){ %>
    
            <tr class="bg-light text-dark">
                <td scope="row"><%= user.user_id %></td>
                <td><%= user.email %></td>
                <td><%= user.password %></td>
                <td><a  class="btn btn-primary" href="/users/<%= user.user_id %>" role="button">Edit</a>
                <a name="" user_id="" class="btn btn-danger" href="/user_delete/<%=user.user_id %>" onclick="return confirm('Are you sure you want to delete?')" role="button">Delete</a></td>
            </tr>
            <tr>
                <td scope="row"></td>
                <td></td>
                <td></td>
            </tr>
            <% }); %>
        </tbody>
    
    </table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
</div>

