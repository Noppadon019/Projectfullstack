<% include ../partials/header %>
  
  <form action ="/users/update" method ="post">
  <div class="form-group">
    <label for="">ID</label>
    <input type="number"
      class="form-control"value ="<%= users.user_id %>" name="user_id" user_id="" aria-describedby="helpId" placeholder="">
    <small user_id="helpId" class="form-text text-muted">User ID</small>
  </div>

<div class="form-group">
    <label for="">email</label> 
    <input type="text"
      class="form-control" value ="<%= users.email %>"name="email" user_id="" aria-describedby="helpId" placeholder="">
    <small user_id="helpId" class="form-text text-muted">Email</small>
  </div>

<div class="form-group">
    <label for="">password</label>
    <input type="text"
      class="form-control" value = "<%= users.password %>"name="password" user_id="" aria-describedby="helpId" placeholder="">
    <small user_id="helpId" class="form-text text-muted">Password</small>
  </div>
  <div class="form-group">
        <label for="">Time</label>
        <input type="text" class="form-control" value="<%= time %>" name="time" user_id="" aria-describedby="helpId" placeholder="" >
        <small user_id="helpId" class="form-text text-muted">Time</small>
      </div>
      
<button type="submit" class="btn btn-primary">Save</button>
<button type="submit" class="btn btn-dark" >Cancel</button>
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" role="button" >DELETE</button>

</div>
</form>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"> Confirm Delete </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body"> Do you want to delete user ? </div>
        <div class="modal-footer">

          <a name="" id="" class="btn btn-success" href="/user_delete/<%= users.user_id %>" role="button"> DELETE </a>
          <button type="button" class="btn btn-secondary" data-dismiss="modal"> CANCLE </button>
          
        </div>
      </div>
    </div>
  </div>


</form>

 <% include ../partials/footer %>