<% include ../partials/header %>
<form action= "/product/update" method="post">

<div class="form-group">
  <label for="">ID</label>
  <input type="number"
    class="form-control" value = "<%= product.product_id %>" name="product_id" product_id="" aria-describedby="helpId" placeholder="">
  <small product_id="helpId" class="form-text text-muted">Product ID</small>
</div>

<div class="form-group">
  <label for="">Title</label>
  <input type="text"
    class="form-control"  value = "<%= product.title %>" name="title" product_id="title" aria-describedby="helpId" placeholder="">
  <small product_id="helpId" class="form-text text-muted">Product Title</small>
</div>

<div class="form-group">
  <label for="">Price</label>
  <input type="number"
    class="form-control" value = "<%= product.price %>" name="price" product_id="price" aria-describedby="helpId" placeholder="">
  <small product_id="helpId" class="form-text text-muted">Product Price</small>
</div>
<div class="form-group">
        <label for="">Time</label>
        <input type="text" class="form-control" value="<%= time %>" name="time" product_id="" aria-describedby="helpId" placeholder="" >
        <small product_id="helpId" class="form-text text-muted">Time</small>
      </div>
<button type="submit" class="btn btn-primary">Save</button>
<button type="submit" class="btn btn-warning">Cancel</button>

</form>
<% include ../partials/footer %>