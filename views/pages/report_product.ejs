<% include ../partials/header %>
<class="bg-dark">
<div class="jumbotron">
<h1 class="text-center">Report: Product Total </h1><br>
<canvas id="bar-chart" width="800" height="450"></canvas>
<table class="table ">
    <thead>
        <tr class="text-dark bg-warning">
        <th>ITEM NAME</th>
        <th>QUANTITY PURCHASED</th>
        <th>AMOUNT</th>
        </tr>
    </thead>
    <tbody id="myTable">
    <% products.forEach(function(product) { %>
        <tr class="bg-primary text-light">
            <td scope="row"><%= product.title %></font></td>
            <td><%= product.quantity %></font></td>
            <td>$<%= product.price %></font></td>
        </tr>
        <% }); %>
        <% sum.forEach(function(sum) { %>
        <tr class="bg-danger text-light">
            <td scope="row"><h5>Total</h5></td>
            <td id="quantity"><h5><%= sum.squantity %></h5></td>
            <td id="price"><h5>$<%= sum.sprice %></h5></td>
        </tr>
        <% }); %>
    </tbody>
</table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});

<%
function getRandomColor() {
    var letters = '0123456789ABCDEF'.split('');
    var color = '#';
    for (var i = 0; i < 6; i++ ) {
        color += letters[Math.floor(Math.random() * 16)];
    }
    return color;
}

 
var labelss=[]
var data=[]
var color=[]
products.forEach(function(product) { 
    var colors =getRandomColor()
    labelss.push("'" + product.title + "'");
    color.push("'" +colors + "'");
    data.push(product.price);
}); %>

new Chart(document.getElementById("bar-chart"), {
    type: 'bar',
    data: {
      labels:[<%-labelss%>], 
      
      datasets:[{
          label: "à¹ŠUsers",
                backgroundColor: [<%-color%>],   
          data:  [<%=data%>]
        }]
      
     
    },
    options: {
      legend: { display: false },
      title: {
        display: true,
        text: 'Predicted world population (millions) in 2050'
      }
    }
});
</script>


